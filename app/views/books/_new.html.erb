<h2>New book</h2>
<%= form_with model: book do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title, autofocus: true, autocomplete: "title"  %>
  </div>
  <div>
    <%= f.label :body, "Opinion" %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Create Book"%>
  </div>
<% end %>