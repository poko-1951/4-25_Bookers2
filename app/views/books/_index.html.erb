<h2>Books</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% book.each do |book| %>
    <tr>
      <th><%= link_to image_tag(book.user.get_profile_image(80,80)), user_path(book.user.id)%></th>
      <td><%= link_to book.title, book_path(book.id)%></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>