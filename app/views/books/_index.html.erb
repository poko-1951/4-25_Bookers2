<h2>Books</h2>
<table>
  <tr>
    <td></td>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% book.each do |book| %>
    <tr>
      <th><%= link_to image_tag(book.user.get_profile_image(80,80)), book_path(book.id)%></th>
      <td><%= link_to book.title, book_path(book.id)%></td>
      <td><%= book.opinion %></td>
    </tr>
  <% end %>
</table>