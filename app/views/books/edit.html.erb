<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render "error", book: @book %>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f|%>
        <div class="form-group">
          <%= f.label :title%> <br>
          <%= f.text_field :title, autofocus:true, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion"%> <br>
          <%= f.text_area :body, class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success"%>
        </div>

        <span><%= link_to "Show", book_path(@book.id)%></span>
        <span>|</span>
        <span><%= link_to "Back", books_path %></span>
      <% end %>
    </div>
  </div>
</div>