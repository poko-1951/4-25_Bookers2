<body>
  <h2>Editing Book</h2>
  <%= render "error", book: @book %>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f|%>
    <div>
      <%= f.label :title%> <br>
      <%= f.text_field :title, autofocus:true %>
    </div>
    <div>
      <%= f.label :body, "Opinion"%> <br>
      <%= f.text_area :body%>
    </div>
    <div>
      <%= f.submit "Update Book"%>
    </div>

    <span><%= link_to "Show", book_path(@book.id)%></span>
    <span>|</span>
    <span><%= link_to "Back", books_path %></span>
  <% end %>
</body>
