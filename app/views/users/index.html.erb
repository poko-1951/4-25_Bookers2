<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "show", user:  User.find(current_user.id) %>
      <%= render "books/new", book: Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user|%>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80)%></td>
          <td><%= user.name%></td>
          <td><%= link_to "Show", user_path(user.id)%></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>